{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist/js",
    "rootDir": "./src/scripts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
